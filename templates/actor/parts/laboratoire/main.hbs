<input
    name="data.page.laboratoire"
    type="hidden"
    value="true"
    data-dtype="Boolean"/>

{{> "systems/neph5e/templates/actor/parts/laboratoire/constructs.hbs"}}

{{> "systems/neph5e/templates/actor/parts/laboratoire/primae.hbs"}}

<ol class="item-list">

    <li class="item-list-header">

        <div class="item-name">
            <span>{{localize "ITEM.TypeMateriae"}}</span>
        </div>

        <div class="item-short-string">
            <span>{{localize "NEPH5E.element"}}</span>
        </div>

        <div class="item-integer">
            <span>Qt√©</span>
        </div>

        <div class="item-control">
            <span/>
        </div>

        <div class="item-control">
            <span/>
        </div>

    </li>

    {{#each data.alchimie.materiae as |materiae|}}
        {{#with (getItem materiae.refid)}}
            {{> "systems/neph5e/templates/actor/parts/laboratoire/materiae.hbs" materiae=materiae}}
        {{/with}}
    {{/each}}

</ol>

{{#if useV3}}
<ol class="item-list">

    <li class="item-list-header">

        <div class="item-name">
            <span>{{localize "ITEM.TypeCatalyseur"}}</span>
        </div>

        <div class="item-control">
            <span/>
        </div>

        <div class="item-control">
            <span/>
        </div>

    </li>

    {{#each data.alchimie.catalyseurs as |catalyseur|}}
        {{#with (getItem catalyseur.refid)}}
            {{> "systems/neph5e/templates/actor/parts/laboratoire/catalyseur.hbs" catalyseur=catalyseur useV3=../../useV3}}
        {{/with}}
    {{/each}}

</ol>

{{else}}

    {{#each data.alchimie.catalyseurs as |catalyseur|}}
        {{#with (getItem catalyseur.refid)}}
            {{> "systems/neph5e/templates/actor/parts/laboratoire/catalyseur.hbs" catalyseur=catalyseur useV3=../../useV3}}
        {{/with}}
    {{/each}}

{{/if}}