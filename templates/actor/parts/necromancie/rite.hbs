<li class="item" data-item-id="{{rite.refid}}" data-item-type="rite">

    <input
        name="data.necromancie.rites.[{{@index}}].refid"
        type="hidden"
        value="{{rite.refid}}"
        data-dtype="String"/>

    {{#with (getItem rite.refid)}}
    <div class="item-name">
        <span data-item-id="{{rite.refid}}">{{name}}</span>
    </div>
    {{/with}}

    <div class="item-checkbox">
        <input
            type="checkbox"
            name="data.necromancie.rites.[{{@index}}].appris"
            {{checked rite.appris}}
            data-dtype="Boolean"/>
    </div>

    <div class="item-control">
        <a class="item-roll" title="Roll Item"><i class="fas fa-dice-d20"></i></a>
    </div>

    <div class="item-control">
        <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
    </div>
    
    <div class="item-control">
        <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>

</li>