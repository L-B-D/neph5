<input
    name="data.page.necromancie"
    type="hidden"
    value="true"
    data-dtype="Boolean"/>

<ol class="item-list">

    {{#with (getScience data.id "fossoyeur") as |degre|}}
    {{> "systems/neph5e/templates/actor/parts/necromancie/header.hbs" cercle="Fossoyeur" degre=degre useV3=../useV3}}
    {{/with}}

    {{#each data.necromancie.rites as |rite|}}
        {{#with (getItem rite.refid)}}
            {{#if (eq data.data.cercle "fossoyeur")}}
                {{> "systems/neph5e/templates/actor/parts/necromancie/rite.hbs" rite=rite}}
            {{/if}}
        {{/with}}
    {{/each}}

    {{#with (getScience data.id "embaumeur") as |degre|}}
    {{> "systems/neph5e/templates/actor/parts/necromancie/header.hbs" cercle="Embaumeur" degre=degre useV3=../useV3}}
    {{/with}}

    {{#each data.necromancie.rites as |rite|}}
        {{#with (getItem rite.refid)}}
            {{#if (eq data.data.cercle "embaumeur")}}
                {{> "systems/neph5e/templates/actor/parts/necromancie/rite.hbs" rite=rite}}
            {{/if}}
        {{/with}}
    {{/each}}

    {{#with (getScience data.id "imputrescible") as |degre|}}
    {{> "systems/neph5e/templates/actor/parts/necromancie/header.hbs" cercle="Imputrescible" degre=degre useV3=../useV3}}
    {{/with}}

    {{#each data.necromancie.rites as |rite|}}
        {{#with (getItem rite.refid)}}
            {{#if (eq data.data.cercle "imputrescible")}}
                {{> "systems/neph5e/templates/actor/parts/necromancie/rite.hbs" rite=rite}}
            {{/if}}
        {{/with}}
    {{/each}}

</ol>