<li class="item" data-item-id="{{sort.refid}}" data-item-science="magie" data-item-collection="sorts">

    <input
        name="data.magie.sorts.[{{@index}}].refid"
        type="hidden"
        value="{{sort.refid}}"
        data-dtype="String"/>

    {{#with (getItem sort.refid)}}
    <div class="item-name">
        <span data-item-id="{{sort.refid}}">{{name}}</span>
    </div>
    {{/with}}

    <div class="item-checkbox">
        <input
            type="checkbox"
            name="data.magie.sorts.[{{@index}}].focus"
            {{checked sort.focus}}
            data-dtype="Boolean"/>
    </div>

    <div class="item-checkbox">
        <input
            type="checkbox"
            name="data.magie.sorts.[{{@index}}].appris"
            {{checked sort.appris}}
            data-dtype="Boolean"/>
    </div>

    <div class="item-checkbox">
        <input
            type="checkbox"
            name="data.magie.sorts.[{{@index}}].tatoue"
            {{checked sort.tatoue}}
            data-dtype="Boolean"/>
    </div>

    <div class="item-control">
        <a class="item-roll" title="Roll Item"><i class="fas fa-dice-d20"></i></a>
    </div>

    <div class="item-control">
        <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
    </div>
    
    <div class="item-control">
        <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>

</li>