                    <label class="item-name">{{localize "NEPH5E.simulacre.agile"}}</label>

                    <div class="item-control">
                        <a class="item-roll" title="Roll Item"><i class="fas fa-dice-d20"></i></a>
                    </div>

                    <label class="item-integer">{{data.data.agile}}</label>

                </li>

