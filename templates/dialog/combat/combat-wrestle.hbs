<form>

    <div style="display:flex; flex-direction: column; width:400px">

        {{#each actions as |action|}}
            <div class="item-name tooltip hoverable">
                <input type="radio" id="{{action.id}}" name="action" value="{{action.id}}" checked>
                {{#switch action.id}}
                {{#case 'frappe'}}<label for="{{action.id}}">{{localize "NEPH5E.hit"}}: {{action.difficulty}}0% - Impact: {{action.impact}}</label>{{/case}}
                {{#case 'projeter'}}<label for="{{action.id}}">{{localize "NEPH5E.throw"}}: {{action.difficulty}}0%</label>{{/case}}
                {{#case 'immobiliser'}}<label for="{{action.id}}">{{localize "NEPH5E.lock"}}: {{action.difficulty}}0%</label>{{/case}}
                {{/switch}}
                <span class="tooltiptext">{{action.tooltip}}</span>
            </div>
        {{/each}}
        <br>

        <span style="font-weight: bold;">Modificateur (%)
            <input id="modifier" type="Number" value="0"/>
        </span>
        <br>

    </div>

</form>