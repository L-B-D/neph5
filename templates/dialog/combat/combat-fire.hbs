<form>

    <div style="display:flex; flex-direction: column; width:400px">

        <ul>
            <li>Visée: {{weapon.data.data.ranged.visee}}/3 rounds</li>
            <li>Munitions utilisées: {{weapon.data.data.ranged.utilise}} sur {{weapon.data.data.ranged.munitions}}</li>
            <li>Rechargement: {{weapon.data.data.ranged.reload}}/{{weapon.data.data.ranged.vitesse}}</li>
        </ul>

        {{#each actions as |action|}}
            <div class="item-name tooltip hoverable">
                <input type="radio" id="{{action.id}}" name="action" value="{{action.id}}" checked>
                {{#switch action.id}}
                {{#case 'reload'}}<label for="{{action.id}}">{{localize "NEPH5E.reload"}}</label>{{/case}}
                {{#case 'aim'}}<label for="{{action.id}}">{{localize "NEPH5E.aim"}}</label>{{/case}}
                {{#case 'tirer'}}<label for="{{action.id}}">{{action.name}}: {{action.difficulty}}0% - Impact: {{action.impact}}</label>{{/case}}
                {{#case 'salve'}}<label for="{{action.id}}">{{action.name}}: {{action.difficulty}}0% - Impact: {{action.impact}}</label>{{/case}}
                {{#case 'rafale'}}<label for="{{action.id}}">{{action.name}}: {{action.difficulty}}0% - Impact: {{action.impact}}</label>{{/case}}
                {{/switch}}
                <span class="tooltiptext">{{action.tooltip}}</span>
            </div>
        {{/each}}
        <br>

        <span style="font-weight: bold;">Modificateur (%)
            <input id="modifier" type="Number" value="0"/>
        </span>
        <br>

    </div>

</form>